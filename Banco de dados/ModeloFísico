CREATE TABLE if not exists Pessoa (
    nome VARCHAR,
    email VARCHAR,
    telefone VARCHAR,
    endereco VARCHAR,
    senha VARCHAR,
    id_pessoa INTEGER PRIMARY KEY AUTOINCREMENT,
    id_funcionario INT,
    id_gerente INT,
    id_cliente INT,
    Pessoa_TIPO VARCHAR
);

CREATE TABLE if not exists Medicamento (
    nome VARCHAR,
    id_medicamento INTEGER PRIMARY KEY AUTOINCREMENT,
    descricao VARCHAR,
    qtd_disponivel INT,
    validade VARCHAR,
    lote VARCHAR
);

CREATE TABLE if not exists Retirada (
    data DATE,
    id_retirada INTEGER PRIMARY KEY AUTOINCREMENT,
    qtd_retirada INT
);
